.page-header
  h1 New content

- form_for(content, {action: path_to.contents(), method: 'POST', id: "content_form"}, function (form) {
  != partial('contents/form.jade', {locals: {form: form, content: content}})
  .actions
    != form.submit('Create content', {class: 'btn'})
    span= ' or '
    != link_to('Cancel', path_to.contents(), {class: 'btn'})
- });
